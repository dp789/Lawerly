<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="text_header_splash">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>
    <style name="toolbarTitleAppearance">
        <item name="android:fontFamily">@font/bloggersans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
